script/source = "extends KinematicBody2D

var velocity = Vector2()
const GRAVEDAD = 1400
var SALTO = 500
var VELOCIDAD = 300

func _ready():
	get_node(\"RayPiso\").add_exception(self)
	set_fixed_process(true)
	Global.cerdito = self
	pass

func _fixed_process(delta):
	velocity.y += GRAVEDAD * delta
	if Global.player != null:
		jump()
		perseguir()
	move_and_slide(velocity,Vector2(0,-1))
	pass

func perseguir():
	var pos = get_global_pos()
	var posPlayer = Global.player.get_global_pos()
	if(pos.x < posPlayer.x - 100):
		velocity.x = VELOCIDAD
	elif (pos.x > posPlayer.x + 100):
		velocity.x = -VELOCIDAD
	else:
		velocity.x = 0
	if(pos.y > posPlayer.y + 200 || pos.y < posPlayer.y -200):
		set_global_pos(posPlayer)
	pass

func jump():
	if Global.player.estado == Global.player.STATE.JUMP and get_node(\"RayPiso\").is_colliding():
		velocity.y = -SALTO
	pass"

