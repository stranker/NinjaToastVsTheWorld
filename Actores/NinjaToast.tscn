resource/name = "NinjaToast.gd"
script/source = "extends KinematicBody2D

var velocity = Vector2()
var VEL_CORRER = 400
var VEL_AIRE = 300
const GRAVEDAD = 1400
const SALTO = 600
var direction = 1
var shuriken = preload(\"res://Objetos/Shuriken.tscn\")
var listaEnemigos = []
enum STATE {IDLE,RUN,FALLING,JUMP}
var estado = STATE.IDLE
var vida

func _ready():
	set_fixed_process(true)
	set_process_input(true)
	get_node(\"RayPiso\").add_exception(self)
	Global.player = self
	vida = Global.maxVida
	pass

func is_on_floor():
	return get_node(\"RayPiso\").is_colliding()

func _fixed_process(delta):
	movimiento(delta)
	maquinaEstados()
	#print(estado)
	pass

func maquinaEstados():
	if(is_on_floor()):
		if(velocity.x!=0):
			estado = STATE.RUN
		else:
			estado = STATE.IDLE
	else:
		if(velocity.y > 0):
			estado = STATE.FALLING
		if(velocity.y < 0):
			estado = STATE.JUMP
	pass

func movimiento(delta):
	var btn_izq = Input.is_action_pressed(\"ui_left\")
	var btn_der = Input.is_action_pressed(\"ui_right\")
	velocity.y += GRAVEDAD * delta
	velocity.y = clamp(velocity.y,-SALTO,GRAVEDAD/2)
	if btn_izq:
		if is_on_floor():
			velocity.x = -VEL_CORRER
		else:
			velocity.x = -VEL_AIRE
		direction = -1
	elif btn_der:
		if is_on_floor():
			velocity.x = VEL_CORRER
		else:
			velocity.x = VEL_AIRE
		direction = 1
	else:
		velocity.x = 0
	move_and_slide(velocity,Vector2(0,-1))
	set_scale(Vector2(direction,1))
	pass

func _input(event):
	if event.is_action(\"ui_up\") and event.is_pressed() and !event.is_echo() and is_on_floor():
		velocity.y = -SALTO
	if event.is_action(\"Shuriken\") and event.is_pressed() and !event.is_echo():
		var s = shuriken.instance()
		s.direction = direction
		get_tree().get_root().add_child(s)
		s.set_global_pos(get_node(\"Position2D\").get_global_pos())
	if event.is_action(\"Melee\") and event.is_pressed() and !event.is_echo():
		translate(Vector2(direction*5,0))
		if !listaEnemigos.empty():
			for i in listaEnemigos:
				i.getDamage()
	pass

func _on_Melee_body_enter( body ):
	if body.is_in_group(\"Enemigo\"):
		listaEnemigos.append(body)
	pass # replace with function body

func _on_Melee_body_exit( body ):
	if body.is_in_group(\"Enemigo\"):
		listaEnemigos.erase(body)
	pass # replace with function body

func getVida():
	return 
